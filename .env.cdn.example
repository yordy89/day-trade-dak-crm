# CDN Configuration
# Change NEXT_PUBLIC_CDN_PROVIDER to switch between CDN providers

# Current CDN Provider (cloudfront | bunnycdn | cloudflare | custom)
NEXT_PUBLIC_CDN_PROVIDER=cloudfront

# CloudFront Configuration (current)
NEXT_PUBLIC_CLOUDFRONT_DOMAIN=d3m2tao2a2xtek.cloudfront.net
CLOUDFRONT_KEY_PAIR_ID=your-key-pair-id
CLOUDFRONT_PRIVATE_KEY=your-private-key

# BunnyCDN Configuration (for future switch)
# NEXT_PUBLIC_CDN_PROVIDER=bunnycdn
BUNNYCDN_DOMAIN=youraccount.b-cdn.net
BUNNYCDN_ACCESS_KEY=your-access-key
BUNNYCDN_AUTH_KEY=your-auth-key

# Cloudflare Configuration (for future switch)
# NEXT_PUBLIC_CDN_PROVIDER=cloudflare
CLOUDFLARE_DOMAIN=yoursubdomain.cloudflarestream.com
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_API_TOKEN=your-api-token

# Custom CDN Configuration
# NEXT_PUBLIC_CDN_PROVIDER=custom
NEXT_PUBLIC_CDN_DOMAIN=your-custom-domain.com
NEXT_PUBLIC_CDN_VIDEO_PATH=videos/hls